import nltk
from nltk.tokenize import word_tokenize
from nltk.corpus import stopwords, wordnet
from nltk.stem import WordNetLemmatizer

# Download required resources (only needed once)
nltk.download("punkt")
nltk.download("stopwords")
nltk.download("averaged_perceptron_tagger")
nltk.download("wordnet")

# Helper: Map NLTK POS tags â†’ WordNet POS tags
def get_wordnet_pos(tag):
    if tag.startswith('J'):
        return wordnet.ADJ
    elif tag.startswith('V'):
        return wordnet.VERB
    elif tag.startswith('N'):
        return wordnet.NOUN
    elif tag.startswith('R'):
        return wordnet.ADV
    return None

# Main text-processing function
def process_text(text):
    # 1. Tokenize
    tokens = word_tokenize(text)

    # 2. Remove stopwords + keep alphabetic words
    stop_words = set(stopwords.words("english"))
    filtered = [w for w in tokens if w.lower() not in stop_words and w.isalpha()]

    # 3. POS tagging
    pos_tags = nltk.pos_tag(filtered)

    # 4. Lemmatize and keep only nouns + verbs
    lemmatizer = WordNetLemmatizer()
    final_words = []

    for word, tag in pos_tags:
        if tag.startswith("N") or tag.startswith("V"):  # nouns or verbs
            wn_tag = get_wordnet_pos(tag)
            lemma = lemmatizer.lemmatize(word, wn_tag) if wn_tag else word
            final_words.append(lemma)

    return final_words


# Input text
text = "John enjoys playing football while Mary loves reading books in the library."

print(process_text(text))
